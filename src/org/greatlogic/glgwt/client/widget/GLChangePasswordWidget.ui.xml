<ui:UiBinder
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:gxt='urn:import:com.sencha.gxt.widget.core.client'
  xmlns:gxtbutton='urn:import:com.sencha.gxt.widget.core.client.button'
  xmlns:gxtcontainer='urn:import:com.sencha.gxt.widget.core.client.container'
  xmlns:gxtform='urn:import:com.sencha.gxt.widget.core.client.form'
  xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <gxt:Window
    ui:field='window'
    blinkModal='true' closable='false'
    focusWidget='{okButton}'
    modal='true'
    pixelSize='200, 160'>
    <gxtcontainer:VerticalLayoutContainer>
      <gxtform:FieldLabel>Old Password</gxtform:FieldLabel>
      <gxtform:PasswordField ui:field='oldPasswordField'></gxtform:PasswordField>
      <gxtform:FieldLabel>New Password</gxtform:FieldLabel>
      <gxtform:PasswordField ui:field='newPasswordField'></gxtform:PasswordField>
      <gxtform:FieldLabel>Repeat New Password</gxtform:FieldLabel>
      <gxtform:PasswordField ui:field='repeatNewPasswordField'></gxtform:PasswordField>
      <gxtbutton:TextButton ui:field='okButton'>OK</gxtbutton:TextButton>
      <gxtform:FieldLabel ui:field='errorMessageLabel'/>
    </gxtcontainer:VerticalLayoutContainer>
  </gxt:Window>
</ui:UiBinder>